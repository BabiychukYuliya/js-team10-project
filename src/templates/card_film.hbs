{{#each this}}
  <li class='card'>
    <img
      class='card__img'
      src='https://image.tmdb.org/t/p/w500{{poster_path}}'
      alt='{{title}}'
    />
    <h2 class='card__title'>{{title}}</h2>
    <span class="card__genres">{{filmGenres}}</span>
    <span class="card__year">{{filmDate}}</span>
  </li>
{{/each}}